[user]
	name = Ivan Reese
	email = ivan@cdiginc.com

[diff]

[color]
	ui = auto

[alias]
	p = push
	ph = push heroku
	pp = push production
	s = status
	ci = commit
	cim = commit -m
	co = checkout
	di = diff
	dc = diff --cached
	amend = commit --amend
	aa = add --all
	ff = merge --ff-only
	pullff = pull --ff-only
	noff = merge --no-ff
	fa = fetch --all
	b = branch
	ds = diff --stat=160,120
	dh1 = diff HEAD~1
	
	# Fancy logging.
	#	 h = head
	#	 hp = head with patch
	#	 r = recent commits, only current branch
	#	 ra = recent commits, all reachable refs
	#	 l = all commits, only current branch
	#	 la = all commits, all reachable refs
	head = !git l -1
	h = !git head
	hp = "!source ~/.githelpers && show_git_head"
	r = !git l -30
	ra = !git r --all
	l = "!source ~/.githelpers && pretty_git_log"
	la = !git l --all
	
	# http://fredkschott.com/post/2014/02/git-log-is-so-2005/
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit

[merge]
	tool = vimdiff

[core]
	editor = mate -w
	excludesfile = ~/.gitignore_global

[credential]
	helper = osxkeychain

[push]
	default = simple
